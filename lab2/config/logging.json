{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s: %(message)s",
      "datefmt": "%I:%M:%S %d.%m.%Y"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "filename": "logs/perceptron.log",
      "mode": "a",
      "formatter": "simple",
      "delay": true,
      "encoding": "utf-8",
      "maxBytes": 10000,
      "backupCount": 5
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console",
      "file"
    ]
  }
}